<div class="container mt-5">
<input type="text" id="for-busqueda">
<button class="btn btn-info mb-2" id="boton">buscar </button>
</div>

<main role="main" class="col-md-9 ml-sm-auto col-lg-10 pt-3 px-4" id="busqueda">
<div class="row">
 
  {{#each MADRES}}
   
  <div class="col-md-3">
     <hr class="featurette-divider">
    <div class="card">
      <div class="card-body">
        <h4 class="card-title d-flex justify-content-between align-items-center">
          {{ nom_mad }} <a href="/madres/edit/{{_id}}"><i class="fas fa-edit"></i></a>
        </h4>
        <p>{{ etnia }} </p>
        <p>{{ est_civil }} </p>
        <p>{{ edad_mad }} </p>
        <p>{{fecha_mad}}</p>
        <p>{{niv_inst}}</p>
        <p>{{prov_res}}</p>
        <center>
          <form action="/defunciones/madres/{{_id}}" method="GET">
              <button type="submit" class="btn btn-success">ver defunciones</button>
          </form>
        </center>
           
         <hr >
        <!--Eliminar  -->
        <form action="/defunciones/delete-madre/{{_id}}?_method=DELETE" method="POST">
          <input type="hidden" name="_method" value="DELETE">
          <button type="submit" class="btn btn-danger btn-block btn-sm">Delete</button>
        </form>
      </div>
    </div>
  </div>
  {{else}}
  <div class="card mx-auto">
    <div class="card-body">
      <h1>{{user}}</h1>
      <p clsss="lead">No hay Madres registradas </p>
      
    </div>
  </div>
  {{/each}}
</div>
 <hr class="featurette-divider">
</main>
<script src="/js/buscador.js"></script>



