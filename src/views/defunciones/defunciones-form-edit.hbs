<div class="row">
  
  <div class="col-md-7 mx-auto">
    <div class="card">
      <div class="card-header">
        <center>
            <h1>Editar la defuncion</h1>
        </center>
        
        
      </div>
      <div class="card-body">
      <form action="/defunciones/edite/{{defuncion._id}}?_method=PUT" method="POST">
        
        
          <div class="form-group">
              <input type="button"value="Activar caja" onclick="activarCaja('sexo')"> 
              <label >Sexo</label>
            <select name="sexo" disabled="" id="sexo">
                <option value="Mujer">Mujer</option> 
                <option value="Hombre" selected>Hombre</option>
            
            </select>
          </div>
          <div class="form-group">
             <input type="button"value="Activar caja" onclick="activarCaja('sem_gest')"> 
            <input type="number" class="form-control" name="sem_gest" placeholder="Periodo de gestación" id="sem_gest" disabled=" " value={{defuncion.sem_gest}}>
          </div>
          <div class="form-group">
              <input type="button"value="Activar caja" onclick="activarCaja('fecha_fall')"> 
            <label for="start">fecha de fallecimiento:</label>
            <input type="date" name="fecha_fall" id="fecha_fall" disabled=" ">
          
 
          </div>
          <div class="form-group">
            
            <input type="button"value="Activar caja" onclick="activarCaja('p-emb')"> 
            <label >Producto del enbarazo</label>
            <select name="p-emb" id="p-emb" disabled=" ">
            <option value="Simple">Simple</option> 
            <option value="Doble" >Doble</option>
            <option value="Triple" >Triple</option>
            <option value="Cuádruple ó más" >Cuádruple ó más</option>
            </select>

          </div>
          <div class="form-group">
            
              <input type="button"value="Activar caja" onclick="activarCaja('asis-por')"> 
            <label >Asistido por :</label>
            <select name="asis-por" id="asis-por" disabled=" ">
            <option value="Médico/a">Médico/a</option> 
            <option value="Obstetriz/Obstetra" >Obstetriz/Obstetra</option>
            <option value="Médico Legista" >Médico Legista</option>
            <option value="Partero/a no calilficado/a" >Partero/a no calilficado/a</option>
            <option value="Otro" >Otro</option>
            </select>


            
          </div>
           <input type="button"value="Activar caja" onclick="activarCaja('lugar_ocur')"> 
            <label >lugar de ocurrencia :</label>
            <select name="lugar_ocur" id="lugar_ocur" disabled=" ">
            <option value="Hospital, Clínica o Consultorio Privado">Hospital, Clínica o Consultorio Privado</option> 
            <option value="Establecimiento del Ministerio de Salud" >Establecimiento del Ministerio de Salud</option>
            <option value="Establecimiento de la Junta de Beneficencia" >Establecimiento de la Junta de Beneficencia</option>
            <option value="Establecimiento del IESS" >Establecimiento del IESS</option>
            <option value="Otro Establecimiento Público" >Otro Establecimiento Público</option>
            <option value="Casa" >Casa</option>
            <option value="Otro" >Otro</option>
            
            </select>

          </div>
          <div class="form-group">
              <input type="button"value="Activar caja" onclick="activarCaja('provFall')"> 
            <label >provincia del falecimiento</label>
            <select name="prov_fall" onchange="cambia()" id="provFall" disabled=" ">
               <option value="--">--</option>
              <option value="Galápagos">Galápagos</option>
              <option value="Zamora Chinchipe">Zamora Chinchipe</option>
              <option value="Morona Santiago">Morona Santiago</option>
              <option value="Azuay">Azuay</option>
              <option value="Napo">Napo</option>
              <option value="Sucumbíos">Sucumbíos</option>
              <option value="Cańar">Cańar</option>
              <option value="Cotopaxi">Cotopaxi</option>
              <option value="Guayas">Guayas</option>
              <option value="Imbabura">Imbabura</option>
              <option value="El Oro">El Oro</option>
              <option value="Bolívar">Bolívar</option>
              <option value="Loja">Loja</option>
              <option value="Pichincha">Pichincha</option>
              <option value="Santa Elena">Santa Elena</option>
              <option value="Orellana">Orellana</option>
              <option value="Chimborazo">Chimborazo</option>
              <option value="Esmeraldas">Esmeraldas</option>
              <option value="Santo Domingo de los Tsáchilas">Santo Domingo de los Tsáchilas</option>
              <option value="Tungurahua">Tungurahua</option>
              <option value="Los Ríos">Los Ríos</option>
              <option value="Pastaza">Pastaza</option>
              <option value="Carchi">Carchi</option>
              <option value="Manabí">Manabí</option>
              

            </select>
            
          </div>
          <div class="form-group">
            <input type="button"value="Activar caja" onclick="activarCaja('cantFall')"> 
            <label>Canton del fallecimiento</label>
            <select name="cant_fall" id="cantFall" onchange="cambia2()" disabled=" ">
              <option value="--">--</option>
            </select>
          </div>
          <div class="form-group">
            <input type="button"value="Activar caja" onclick="activarCaja('parrFall')"> 
            <label>parroquia del fallecimiento</label>
            <select name="parr_fall" id="parrFall" disabled=" ">
             
            </select>
          </div>
          <div class="form-group">
            <input type="button"value="Activar caja" onclick="activarCaja('area_fall')" > 
            <label >Area del fallecimiento</label>
            <select name="area_fall" id="area_fall" disabled=" "> 
                <option value="Rural">Rural</option> 
                <option value="Urbana" selected>Urbana</option>
            
            </select>

          </div>
          <div class="form-group">
              <input type="button"value="Activar caja" onclick="activarCaja('causa_fetal')"> 
            <input type="text" disabled=" " class="form-control" name="causa_fetal" id="causa_fetal" placeholder="Causa que ocasiono la defuncion fetal" value={{defuncion.causa_fetal}} >
          </div>

                    <div class="form-group">
              <input type="button"value="Activar caja" onclick="activarCaja('con_pren')"> 
            <input type="number" class="form-control" name="con_pren" id="con_pren" placeholder="Cuantos controles prenatales realizo en este enbarazo" value={{defuncion.con_pren}} disabled=" ">
          </div>


          <button class="btn btn-primary btn-block">
            Signup 
          </button>
        </form>
      </div>
    </div>
  </div>
</div>
<script>
function activarCaja(id){
    caja =document.getElementById(id);
    if(caja.disabled==""){
        caja.disabled=true;
    }else{
        caja.disabled=false;
    }
}


</script>
