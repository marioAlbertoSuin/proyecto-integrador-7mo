              <option value="Superior universitario">Superior universitario</option>
              <option value="Educación Básica">Educación Básica</option>
              <option value="Centro de alfabetización">Centro de alfabetización</option>
              <option value="Superior">Superior</option>
              <option value="Ciclo Post-Bachillerato">Ciclo Post-Bachillerato</option>
