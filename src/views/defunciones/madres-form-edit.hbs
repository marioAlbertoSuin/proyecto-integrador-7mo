      <div class="card-body">
      <form action="/madres/edite/{{defuncion._id}}?_method=PUT" method="POST">
        

          <h1>Datos de la madre</h1>
          <div class="form-group">
              <input type="button"value="Activar caja" onclick="activarCaja('nac_mad')"> 
            <label >Nacionalidad de la madre</label>
            <select name="nac_mad" id="nac_mad"disabled=" ">
              <option value="Extranjera">Extranjera</option>
              <option value="Ecuatoriana">Ecuatoriana</option>
            </select>
          </div>
          <div class="form-group">
              <input type="button"value="Activar caja" onclick="activarCaja('nom_pais')"> 
