                <option value="Soltera" >Soltera</option>
                <option value="Unida" >Unida</option>
                <option value="Casada" >Casada</option>
                <option value="Sin información" >Sin información</option>
            
            
            </select>
          </div>
          <div class="form-group">
              <input type="button"value="Activar caja" onclick="activarCaja('sabe_leer')"> 
                 <label>Sabe leer </label>
                <select name="sabe_leer" id="sabe_leer" disabled=" ">
                <option value="Si">Si</option> 
                <option value="No">No</option> 
                </select>

          </div>
          <div class="form-group">
              <input type="button"value="Activar caja" onclick="activarCaja('niv_inst')"> 
            <label> Nivel de Instrucion</label>
            <select name="niv_inst" id="niv_inst" disabled=" ">
