          </div>


          <div class="form-group">
              <input type="button"value="Activar caja" onclick="activarCaja('fecha_mad')"> 
              <label for="start">Fecha de nacimiento :</label>
              <input type="date" id="start" name="fecha_mad"
            value="2020-07-00"
            min="1970-01-01" max="2040-12-31" id="fecha_mad" disabled=" ">

          </div>

          <div class="form-group">
              <input type="button"value="Activar caja" onclick="activarCaja('hij_viv')"> 
            <input type="number" class="form-control" name="hij_viv" id="hij_viv" placeholder="Cantidad hijos vivos" value={{defuncion.hij_viv}} disabled=" ">
