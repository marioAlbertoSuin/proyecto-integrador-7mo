              <option value="Esmeraldas">Esmeraldas</option>
              <option value="Santo Domingo de los Tsáchilas">Santo Domingo de los Tsáchilas</option>
              <option value="Tungurahua">Tungurahua</option>
              <option value="Los Ríos">Los Ríos</option>
              <option value="Pastaza">Pastaza</option>
              <option value="Carchi">Carchi</option>
              <option value="Manabí">Manabí</option>
            </select>
          </div>
          <div class="form-group">
            <input type="button"value="Activar caja" onclick="activarCaja('cantRes')"> 
             <label >Canton de residencia</label>
             <select name="cant_res" id="cantRes" onchange="cambio2()" disabled=" ">
               <option value="--">--</option>
             </select>
          </div>
          <div class="form-group">
            <input type="button"value="Activar caja" onclick="activarCaja('parrRes')">
            <label >parroquia de residencia</label>
             <select name="parr_res" id="parrRes" disabled=" ">

             </select>
          </div>
          <div class="form-group">
            <input type="button"value="Activar caja" onclick="activarCaja('area_res')">
              <label >Area de residencia abitual</label>
              <select name="area_res" id="area_res" disabled=" ">
                <option value="Rural">Rural</option>
                <option value="Urbana">Urbana</option>
              </select>

          <button class="btn btn-primary btn-block">
            Signup 
          </button>
        </form>
      </div>
    </div>
  </div>
</div>
<script>
function activarCaja(id){
    caja =document.getElementById(id);
    if(caja.disabled==""){
        caja.disabled=true;
    }else{
        caja.disabled=false;
    }
}


</script>
