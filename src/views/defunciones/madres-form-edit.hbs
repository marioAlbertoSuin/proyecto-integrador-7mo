          <div class="form-group">
              <input type="button"value="Activar caja" onclick="activarCaja('hij_nacm')"> 
            <input type="number" class="form-control" name="hij_nacm" id="hij_nacm" placeholder="Cuantos hijos nacieron muertos" value={{defuncion.hij_nacm}} disabled=" ">
          </div>

          <div class="form-group">
              <input type="button"value="Activar caja" onclick="activarCaja('etnia')"> 
            <label>Etnia de la madre</label>
                <select name="etnia" id="etnia" disabled=" ">
